{
  "extends": "../tsconfig.base.json",
  "reflection": true,
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ESNext", "DOM"],
    "preserveWatchOutput": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "nodenext",
    "declaration": true,
    "declarationMap": true,
    "jsx": "react"
  },
  "include": ["src/**/*"],
  "exclude": [
    "dist",
    "./RelaySchema.d.ts",
    "./RelaySchema.js",
    "./RelaySchema.js.map",
    "./RelayTypes.d.ts",
    "./RelayTypes.js",
    "./RelayTypes.js.map",
    "./api",
    "./assigned-journeys",
    "./case-notes",
    "./check-in",
    "./clients",
    "./content",
    "./conversations",
    "./core",
    "./debug",
    "./entities",
    "./entries",
    "./feelings",
    "./files",
    "./frontend",
    "./goals",
    "./hooks",
    "./journal-entries",
    "./journeys",
    "./layout",
    "./models",
    "./questionnaires",
    "./reasons",
    "./reporting-stats",
    "./resources",
    "./scheduling",
    "./time",
    "./timing",
    "./todos",
    "./users",
    "./worksheets"
  ]
}
